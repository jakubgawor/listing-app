{% extends 'base.html.twig' %}

{% block title %} Listing {% endblock %}

{% block body %}

    Title: {{ listing.title }} <br>
    Slug: {{ listing.slug }} <br>
    Description: {{ listing.description }} <br>
    Created by: {{ listing.belongsToUser.username }} <br>
    Category: {{ listing.category.category }} <br>
    <b>Views: {{ listing.views }}</b>

    <div class="text-xs">
        Created at: {{ listing.createdAt|date("d-m-Y-H-i-s") }}
    </div>



{% endblock %}