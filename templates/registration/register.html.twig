{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Register</h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">


            {% for flash_error in app.flashes('verify_email_error') %}
                {{ include('partials/_validation-error.html.twig', {'error': flash_error}) }}
            {% endfor %}

            {{ form_start(registrationForm) }}

            <div>
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                    <div class="text-xs text-red-500">{{ form_errors(registrationForm.email) }}</div>
                </div>
            </div>

            <div class="mt-4">
                {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                    <div class="text-xs text-red-500">{{ form_errors(registrationForm.username) }}</div>
                </div>
            </div>

            <div class="mt-4">
                {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                    <div class="text-xs text-red-500">{{ form_errors(registrationForm.plainPassword.first) }}</div>
                </div>
            </div>

            <div class="mt-4">
                {{ form_label(registrationForm.plainPassword.second, 'Confirm password', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                    <div class="text-xs text-red-500">{{ form_errors(registrationForm.plainPassword.second) }}</div>
                </div>
            </div>


            <div class="my-2">
                <div class="flex">
                    {{ form_label(registrationForm.agreeTerms, 'Agree Terms', {'label_attr': {'class': 'block text-sm font-medium text-gray-900'}}) }}
                    <div>
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'ml-2 rounded-md'}}) }}
                    </div>
                </div>
                <div class="text-xs text-red-500">{{ form_errors(registrationForm.agreeTerms) }}</div>
            </div>

            <div>
                {{ include ('partials/_button-submit.html.twig', {'body': 'Register'}) }}
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>









{% endblock %}