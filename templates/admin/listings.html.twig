{% extends 'base.html.twig' %}

{% block title %}Admin listinigs{% endblock %}

{% block body %}

    {% for listing in listings %}

        <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">

            <article class="overflow-hidden rounded-lg shadow-lg">

                <a href="{{ path('app_admin_show_listing', {slug: listing.slug }) }}">
                    <img alt="{{ listing.title }}" class="block h-auto w-full" src="https://picsum.photos/600/400/?random">
                </a>

                <header class="flex items-center justify-between leading-tight p-2 md:p-4">
                    <h1 class="text-lg">
                        <a class="no-underline hover:underline text-black" href="{{ path('app_admin_show_listing', {slug: listing.slug }) }}">
                            {{ listing.title }}
                        </a>
                    </h1>
                    <p class="text-grey-darker text-sm">
                        {{ listing.createdAt|date('d.m.Y H:i:s') }}
                    </p>
                </header>

                <footer class="flex items-center justify-between leading-none p-2 md:p-4">
                    <a class="flex items-center no-underline hover:underline text-black" href="#">
                        <img alt="Placeholder" class="block rounded-full" src="https://picsum.photos/32/32/?random">
                        <p class="ml-2 text-sm">
                            {{ listing.belongsToUser.username }}
                        </p>
                    </a>
                    <a class="no-underline text-grey-darker text-xs" href="#">
                        {{ listing.category.category }}
                    </a>
                </footer>

            </article>

        </div>

    {% endfor %}

{% endblock %}
