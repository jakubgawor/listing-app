{% extends 'base.html.twig' %}

{% block title %}Edit profile{% endblock %}

{% block body %}

    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Edit profile</h2>
            <h3 class="text-center text-sm text-gray-500">{{ user.userIdentifier }}</h3>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">

            {{ form_start(userProfileForm) }}
            <div>
                {{ form_label(userProfileForm.first_name, 'First name:', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div>
                    <div class="mt-1">
                        {{ form_widget(userProfileForm.first_name, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                    <div class="text-xs text-red-500">{{ form_errors(userProfileForm.first_name) }}</div>
                </div>
            </div>

            <div>
                {{ form_label(userProfileForm.last_name, 'Last name:', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div>
                    <div class="mt-1">
                        {{ form_widget(userProfileForm.last_name, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                    <div class="text-xs text-red-500">{{ form_errors(userProfileForm.last_name) }}</div>
                </div>
            </div>

            <div>
                {{ form_label(userProfileForm.phone_number, 'Phone number:', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div>
                    <div class="mt-1">
                        {{ form_widget(userProfileForm.phone_number, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                    <div class="text-xs text-red-500">{{ form_errors(userProfileForm.phone_number) }}</div>
                </div>
            </div>

            <div>
                {{ form_label(userProfileForm.city, 'City:', {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div>
                    <div class="mt-1">
                        {{ form_widget(userProfileForm.city, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                    <div class="text-xs text-red-500">{{ form_errors(userProfileForm.city) }}</div>
                </div>
            </div>

            <div class="mt-5">
                {{ include('partials/_button-submit.html.twig', {'body': 'Update profile'}) }}
            </div>

            {{ form_end(userProfileForm) }}

        </div>
    </div>

{% endblock %}